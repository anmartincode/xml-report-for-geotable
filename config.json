{
  "description": "Configuration file for Civil 3D Geotable XML Report Generator",
  "version": "1.0.0",
  
  "extraction_settings": {
    "station_interval": 10.0,
    "comment": "Default interval for station sampling along alignment (in drawing units)",
    
    "include_superelevation": true,
    "include_curves": true,
    "include_stations": true,
    
    "coordinate_precision": 6,
    "station_precision": 3,
    "angle_precision": 6
  },
  
  "xml_settings": {
    "pretty_print": true,
    "encoding": "utf-8",
    "xml_version": "1.0",
    "namespace": "http://civil3d.autodesk.com/geotable",
    
    "include_metadata": true,
    "include_timestamps": true
  },
  
  "output_settings": {
    "default_output_directory": "./output",
    "filename_template": "{project_name}_{alignment_name}_geotable_{timestamp}.xml",
    "timestamp_format": "%Y%m%d_%H%M%S",
    
    "create_summary_report": true,
    "generate_backup": false
  },
  
  "rail_specific_settings": {
    "track_gauge": 1435.0,
    "comment_gauge": "Standard gauge in mm (1435mm = 4ft 8.5in)",
    
    "cant_units": "mm",
    "station_units": "meters",
    
    "extract_cant_data": true,
    "extract_track_geometry": true
  },
  
  "validation_settings": {
    "validate_xml_schema": false,
    "schema_path": "./schema/geotable_schema.xsd",
    
    "check_station_continuity": true,
    "warn_on_missing_data": true
  },
  
  "filters": {
    "alignment_name_pattern": "",
    "comment_pattern": "Use regex pattern to filter alignments by name (empty = all)",
    
    "min_alignment_length": 0,
    "max_curve_radius": null,
    "exclude_tangent_only": false
  }
}

